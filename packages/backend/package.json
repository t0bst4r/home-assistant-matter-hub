{
  "name": "@home-assistant-matter-hub/backend",
  "version": "3.0.0-alpha.54",
  "private": true,
  "type": "module",
  "destination": "./dist",
  "scripts": {
    "cleanup": "npx rimraf node_modules dist",
    "lint": "eslint .",
