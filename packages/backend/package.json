    "express-ip-access-control": "1.1.3",
    "home-assistant-js-websocket": "9.4.0",
    "lodash": "4.17.21",
    "rxjs": "7.8.1",
    "strip-color": "0.1.0",
    "yargs": "17.7.2",
    "winston": "3.17.0",
    "ws": "8.18.0"
  },
  "devDependencies": {
    "@types/async-lock": "^1.4.2",
    "@types/express": "^5.0.0",
    "@types/lodash": "^4.17.13",
    "@types/strip-color": "^0.1.2",
    "@types/yargs": "^17.0.33",
    "@types/ws": "^8.5.13"
